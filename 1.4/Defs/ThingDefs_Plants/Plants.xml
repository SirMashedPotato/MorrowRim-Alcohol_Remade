<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>MorrowRim_comberry</defName>
    <label>comberry plant</label>
    <description>A berry bush that can be harvested for comberry. Comberry can be used in cooking, but is most often used for fermenting shein and greef.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Comberry</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>1.0</fertilitySensitivity>
      <growDays>8</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>MorrowRim_RawComberry</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowMinSkill>3</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
	  <immatureGraphicPath>Things/Plant_Immature/Comberry</immatureGraphicPath>
	  <harvestAfterGrowth>0.30</harvestAfterGrowth>
	  <harvestMinGrowth>0.80</harvestMinGrowth>
	  <sowResearchPrerequisites>
        <li>MorrowRim_BoozeGrowing</li>
      </sowResearchPrerequisites>
    </plant>
  </ThingDef>
  
